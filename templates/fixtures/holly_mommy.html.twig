{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Arial', sans-serif;
        }
        #cv-container {
            width: 210mm;
            height: 297mm;
            background: white;
            display: flex;
            flex-direction: row;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .left-col {
            width: 70mm;
            background: #343a40;
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        .profile-img {
            width: 60mm;
            height: 60mm;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 15px;
        }
        .right-col {
            width: calc(210mm - 70mm);
            padding: 20px;
        }
        .section-title {
            font-size: 14pt;
            color: #007bff;
            margin-bottom: 10px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }
        .experience-item, .education-item {
            margin-bottom: 15px;
        }
        .experience-title, .education-title {
            font-size: 12pt;
            font-weight: bold;
        }
        .experience-date, .education-date {
            font-size: 10pt;
            color: #666;
        }
        @media print {
            body {
                background: white !important;
            }
            #cv-container {
                box-shadow: none;
            }
        }
        p {
            margin: 0 0; /* Reduce el espacio arriba y abajo */
            line-height: 1.2; /* Ajusta la altura de l√≠nea para mejorar legibilidad */
        }
    </style>
{% endblock %}

{% block body %}
    <div id="cv-container">
        <div class="left-col">
            <img src="{{ aws_bucket_cv_media_pics_url }}/{{ app.user.photo }}" alt="Profile" class="profile-img" />
            <div class="name">{{ app.user.name | title }} {{ app.user.lastname | title }}</div>
            <p class="experience-description">{{ app.user.aboutme }}</p>
        </div>
        <div class="right-col">
            <div class="section-title">Experiences</div>

            {% for experience in app.user.experience %}
                <div class="experience-item">
                    {% if not loop.first %}<hr style="margin: 4mm 0">{% endif %}
                    <h4 style="font-size: 11pt; margin: 0">{{ experience.role | upper }}</h4>
                    <div class="experience-date">
                        ({{ experience.startdate | date("M Y") }} - {{ experience.enddate | date("M Y") }})
                    </div>
                    <div class="experience-description">{{ experience.description | raw }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}