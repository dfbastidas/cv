{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            margin: 0;
            padding: 0;
        }
        .resume-container {
            width: 900px;
            margin: 0 auto;
            background-color: #ffffff;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .header {
            background-color: #3c3c3c;
            color: white;
            padding: 30px;
            display: flex;
            align-items: center;
        }
        .header img {
            border-radius: 50%;
            width: 80px;
            height: 80px;
            margin-right: 20px;
        }
        .header h1 {
            margin: 0;
            font-size: 28px;
        }
        .header p {
            margin: 0;
            font-size: 16px;
        }
        .left-column {
            width: 35%;
            background-color: #f4f4f4;
            padding: 30px;
        }
        .right-column {
            width: 65%;
            padding: 30px;
        }
        .content {
            display: flex;
        }
        .section-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .contact-info p, .skills p {
            font-size: 14px;
            margin: 5px 0;
        }
        .contact-info i {
            margin-right: 10px;
        }
        .education, .summary {
            margin-top: 20px;
        }
        .work-experience {
            margin-top: 20px;
        }
        .work-experience h5 {
            font-size: 16px;
            font-weight: bold;
        }
        .work-experience p {
            font-size: 14px;
            margin: 5px 0;
            color: gray;
        }
        .work-experience ul {
            font-size: 14px;
            padding-left: 20px;
        }
        .reference {
            margin-top: 20px;
        }
        .divider {
            border-bottom: 2px solid black;
            margin: 10px 0;
        }

        div figure.table table {
            border-collapse: collapse;
            width: 100%;
        }

        div figure.table table th,
        div figure.table table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        div figure.table table thead {
            background-color: #f2f2f2;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="resume-container">
        <!-- Header -->
        <div class="header">
            {% if app.user.photo is not empty %}
                <img src="{{ aws_bucket_cv_media_pics_url }}/{{ app.user.photo }}" alt="Profile" class="profile-img" />
            {% endif %}

            <div>
                <h1>{{ app.user.name | title }} {{ app.user.lastname | title }}</h1>
            </div>
        </div>

        <div class="content">
            <!-- Left Column -->
            <div class="left-column">

                <div class="summary">
                    <div class="section-title">Sobre MÃ­</div>
                    <p>{{ app.user.aboutme }}</p>
                </div>

                <div class="contact-info">
                    <div class="divider"></div>
                    <div class="section-title">Contact Details</div>
                    <p><i class="fas fa-envelope"></i> {{ app.user.mainemail }}</p>
                    <p><i class="fas fa-phone"></i> {{ app.user.mainphone }}</p>
                    <p><i class="fas fa-map-marker-alt"></i> {{ app.user.location }}</p>
                </div>

                <div class="education">
                    <div class="divider"></div>
                    <div class="section-title">Education</div>
                    {% for education in app.user.education %}
                        {% if not loop.first %}<hr style="margin: 3mm 0">{% endif %}
                        <small>
                            <div><strong>{{ education.degree | title }}</strong></div>
                            <div>{{ education.almamater }}</div>
                            <div>({{ education.startdate | date("Y") }} - {{ education.enddate | date("Y") }})</div>
                        </small>
                    {% endfor %}
                </div>


                {% if app.user.links | length > 0 %}
                    <div class="divider"></div>
                    <div class="section-title">Enlaces</div>
                    <ul></ul>
                {% endif %}

                {% for link in app.user.links %}
                    <li><a href="{{ link.link }}" target="_blank">{{ link.label }}</a></li>
                {% endfor %}

                {% if app.user.links | length > 0 %}
                    </ul>
                {% endif %}
            </div>

            <!-- Right Column -->
            <div class="right-column">
                <div class="work-experience">
                    <div class="section-title">Work Experience</div>
                    <div class="divider"></div>
                    {% for experience in app.user.experience %}
                        <div class="mt-3">
                            <h5>{{ experience.role }}</h5>
                            <p>({{ experience.startdate | date("Y") }} - {{ experience.enddate | date("Y") }})</p>
                            <div>{{ experience.description | raw }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {# JavaScript completamente eliminado #}
{% endblock %}