{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Reset absoluto para impresi√≥n */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }

        body {
            background: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Arial', sans-serif;
            overflow: auto;
        }

        #cv-container {
            width: 210mm;
            min-width: 210mm;
            height: 297mm;
            background: white;
            margin: 20px auto;
            position: relative;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            transform-origin: top center;
        }

        .left-col {
            width: 70mm;
            height: 100%;
            background: #2d2d2d;
            color: white;
            padding: 8mm;
            position: absolute;
            left: 0;
            top: 0;
        }

        .right-col {
            width: 140mm;
            height: 100%;
            padding: 8mm;
            position: absolute;
            left: 70mm;
            top: 0;
        }

        .profile-img {
            width: 50mm;
            height: 50mm;
            object-fit: cover;
            border-radius: 2mm;
            margin-bottom: 8mm;
        }

        .name {
            font-size: 16pt;
            font-weight: bold;
            margin-bottom: 6mm;
            line-height: 1.2;
        }

        .section-title {
            font-size: 12pt;
            color: #e83e8c;
            margin: 6mm 0 3mm 0;
            padding-bottom: 1mm;
            border-bottom: 0.5pt solid currentColor;
            text-transform: uppercase;
        }

        .education-item {
            margin: 4mm 0;
            page-break-inside: avoid;
        }

        .education-item strong {
            display: block;
            font-size: 10pt;
            margin-bottom: 1mm;
        }

        .education-item div {
            font-size: 9pt;
            color: #cccccc;
        }

        .experience-item {
            margin: 6mm 0;
            page-break-inside: avoid;
        }

        .experience-date {
            font-size: 9pt;
            color: #666666;
            margin: 2mm 0;
        }

        .experience-description {
            font-size: 10pt;
            line-height: 1.4;
            margin-top: 3mm;
        }

        @media print {
            body {
                background: white !important;
                display: block !important;
                overflow: hidden !important;
            }
            #cv-container {
                box-shadow: none;
                margin: 0;
                position: absolute;
                left: 0;
                top: 0;
            }
        }


        @media screen {
            #cv-container {
                transform: scale(0.9);
            }
        }
        p {
            margin: 0;
            line-height: 1.2;
            font-size: 10pt;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="cv-container">
        <!-- Columna Izquierda -->
        <div class="left-col">
            <img src="{{ aws_bucket_cv_media_pics_url }}/{{ app.user.photo }}" alt="Profile" class="profile-img" />
            <div class="name">{{ app.user.name | title }} {{ app.user.lastname | title }}</div>

            <div class="section-title">About Me</div>
            <p class="experience-description">{{ app.user.aboutme }}</p>
            <div class="section-title">Contact</div>
            <p class="my-3">{{ app.user.mainemail }}</p>
            <p class="my-2"><i class="fa-solid fa-house"></i> - {{ app.user.location }}</p>
            <p class="my-2"><i class="fa-solid fa-phone"></i> - {{ app.user.mainphone }}</p>


            <div class="section-title">Education</div>
            {% for education in app.user.education %}
                <div class="education-item">
                    {% if not loop.first %}<hr style="margin: 3mm 0">{% endif %}
                    <strong>{{ education.degree }}</strong>
                    <div>{{ education.almamater }}</div>
                    <div>({{ education.startdate | date("M Y") }} - {{ education.enddate | date("M Y") }})</div>
                </div>
            {% endfor %}

        </div>

        <!-- Columna Derecha -->
        <div class="right-col">
            <div class="section-title">Experiences</div>
            {% for experience in app.user.experience %}
                <div class="experience-item">
                    {% if not loop.first %}<hr style="margin: 4mm 0">{% endif %}
                    <h4 style="font-size: 11pt; margin: 0">{{ experience.role | upper }}</h4>
                    <div class="experience-date">
                        ({{ experience.startdate | date("M Y") }} - {{ experience.enddate | date("M Y") }})
                    </div>
                    <div class="experience-description">{{ experience.description | raw }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {# JavaScript completamente eliminado #}
{% endblock %}